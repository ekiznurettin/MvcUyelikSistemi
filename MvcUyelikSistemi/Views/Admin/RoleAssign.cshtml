@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "RoleAssign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcıya Rol Atama Formu @ViewBag.UserName</h1>
<hr />
<form asp-controller="Admin" asp-action="RoleAssign" method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input asp-for="@Model[i].Exists"  type="checkbox" class="form-check-input"/>
            <label asp-for="@Model[i].RoleId" class="form-check-label">@Model[i].RoleName</label>
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="hidden" asp-for="@Model[i].RoleId" />
        </div>
    }
    <input class="btn btn-success" type="submit" value="Rol Ata" />
</form>
