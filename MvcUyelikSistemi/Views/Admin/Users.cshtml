@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcılar</h1>

<table class="table table-bordered table-striped">
    <tr>
        <td>UserId</td>
        <td>User Name</td>
        <td>Email</td>
        <td>Rolleri</td>
        <td>Rol Atama</td>
        <td>Şifre Belirle</td>
    </tr>
    @if (Model.Count() < 1)
    {
        <tr>
            <td colspan="3">Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>
                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-Id="@item.Id">Rol Ata</a> </td>
                <td><a class="btn btn-success" asp-action="ResetUserPassword" asp-route-Id="@item.Id">Şifre Belirle</a> </td>
                
            </tr>
        }
    }
</table>