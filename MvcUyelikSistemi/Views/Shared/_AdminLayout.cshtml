<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Admin">Anasayfa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        <div class="container" style="margin-top:10px">
            <div class="row">
                <div class="col-md-3">
                    <h3>Menu</h3>
                    <a class="btn btn-danger btn-block" asp-action="Users" asp-controller="Admin">Kullanıcılar</a>
                    <a class="btn btn-danger btn-block" asp-action="Roles" asp-controller="Admin">Roller</a>
                    <a class="btn btn-danger btn-block" asp-action="Claims" asp-controller="Admin">Claims</a>
                    <a class="btn btn-danger btn-block" asp-action="Logout" asp-controller="Admin" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>
                </div>
                <div class="col-md-9">   @RenderBody()</div>
            </div>
        </div>
    </div>
</body>
</html>
