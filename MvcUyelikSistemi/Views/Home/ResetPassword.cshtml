@model MvcUyelikSistemi.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPassword";
}

@if (ViewBag.status == "Success")
{
    <div class="row">
        <div class="col-md-3 offset-md-4">
            <div class=" alert alert-info">Şifre yenileme linki eposta adresinize gönderilmiştir. Eposta adresinizi kontrol ediniz.</div>
        </div>
    </div>
}
else
{
<div class="row">
    <div class="col-md-3 offset-md-4">
        <h4>Şifre Kurtarma Paneli</h4>
        <hr />
        <div class="alert alert-info">
            Yeni şifre belirlemek için kayıtlı epostanız giriniz.<br />
            Şifre Linkini eposta adresinize göndereceğiz.
        </div>
        <form asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Gönder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}

