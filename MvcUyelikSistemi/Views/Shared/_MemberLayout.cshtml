<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" asp-action="Index" asp-controller="Member">Bidibidi.com</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="Index" asp-controller="Member">Kullanıcı</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" asp-action="Index" asp-controller="Admin" asp-area="">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" aria-current="page" asp-action="Editor" asp-controller="Member">Editor</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-info" aria-current="page" asp-action="Manager" asp-controller="Member">Manager</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger" aria-current="page" asp-action="AnkaraSayfasi" asp-controller="Member">Ankara</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger" aria-current="page" asp-action="Violance" asp-controller="Member">Şiddet Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-danger" aria-current="page" asp-action="ExchangeRedirect" asp-controller="Member">Borsa</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:10px">
        <div class="row">
            <div class="col-md-3">
                <h3>Menu</h3>
                <a class="btn btn-info btn-block" asp-action="PasswordChange" asp-controller="Member">Şifre Değiştirme</a>
                <a class="btn btn-info btn-block" asp-action="UserEdit" asp-controller="Member">Bilgilerimi Güncelleme</a>
                <a class="btn btn-info btn-block" asp-action="TwoFactorAuth" asp-controller="Member">İki Faktorlu Doğrulama</a>
                <a class="btn btn-info btn-block" asp-action="Logout" asp-controller="Member" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>
            </div>
            <div class="col-md-9"> @RenderBody()</div>
        </div>

    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/qrcode/qrcode.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
