@model MvcUyelikSistemi.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-3 offset-md-4">
        <h4>Üye Giriş Formu</h4>
        <hr />
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="RememberMe" /> Beni Hatırla
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Giriş Yap" class="btn btn-primary" />
            </div>
        </form>
        <div class="form-group">
            <a asp-action="FacebookLogin" class="btn btn-primary">Facebook ile Giriş Yapın</a>
        </div>
        <div class="form-group">
            <a asp-action="GoogleLogin" class="btn btn-primary">Google ile Giriş Yapın</a>
        </div>
        <div class="form-group">
            <a asp-action="MicrosoftLogin" class="btn btn-primary">Microsoft Hesabı ile Giriş Yapın</a>
        </div>
        <a class="btn btn-link" asp-action="ResetPassword">Şifremi Unuttum</a>
    </div>
</div>


