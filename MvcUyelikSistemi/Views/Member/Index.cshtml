@model UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<h3 class="text-center">Kullanıcı Bilgileri</h3>
<div class="row">
    <div class="col-md-3">
        <img src="@Model.Picture" width="100" height="100" />
    </div>
    <div class="col-md-9">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Kullanıcı Adı</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-Posta</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Telefon</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>Şehir</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>Doğum Tarihi</th>
                <td>@Model.BirthDay?.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Cinsiyeti</th>
                <td>@Model.Gender</td>
            </tr>
        </table>
    </div>
</div>

